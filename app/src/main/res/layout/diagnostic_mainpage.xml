<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="#ECEBEB"
    tools:context=".MainDiagnostic">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="748dp"
        android:layout_height="807dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ipad_12_9_total"
        tools:srcCompat="@drawable/ipad_12_9_total" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="389dp"
        android:layout_height="535dp"
        android:background="@drawable/my_border"
        android:orientation="vertical"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501">


        <TextView
            android:id="@+id/diagnosticTitle"
            android:layout_width="252dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Welcome Ayman"
            android:textColor="@color/blue_light2"
            android:textSize="24sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:onClick="gotoSelectDiagnosisMode"
            android:text="Start Diagnosis"
            android:textSize="16sp"
            app:backgroundTint="@android:color/holo_blue_light" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:onClick="gotoMyDiagnosed"
            android:text="My Diagnosed"
            android:textSize="16sp"
            app:backgroundTint="@android:color/holo_blue_light" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:onClick="gotoAbout"
            android:text="About"
            android:textSize="16sp"
            app:backgroundTint="@android:color/holo_blue_light" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:onClick="Logout"
            android:text="Logout"
            android:textSize="16sp"
            app:backgroundTint="@android:color/holo_blue_light" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>