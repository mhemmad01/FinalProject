<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="#ECEBEB"
    tools:context=".SelectTrainMode">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="748dp"
        android:layout_height="807dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/images"
        tools:srcCompat="@drawable/images" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="402dp"
        android:layout_height="575dp"
        android:background="@drawable/my_border"
        android:orientation="vertical"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501">


        <TextView
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Choose Mode"
            android:textColor="@color/blue_light2"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="129dp"
            android:layout_height="109dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/thinking_emoji_by_twitter" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue_light"
            android:fontFamily="sans-serif-black"
            android:onClick="StartSyncTrain"
            android:text="Synchrozation"
            android:textSize="16sp"
            app:backgroundTint="@color/blue_light" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue_light"
            android:fontFamily="sans-serif-black"
            android:onClick="StartMotorTrain"
            android:text="Motoric"
            android:textSize="16sp"
            app:backgroundTint="@color/blue_light" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>